<h1><%= @post.title %></h1>
<h2>By: <%= @post.user.username %></h2>

<div><%= @post.content %></div>

<p><%= link_to "See all comment", post_comments_path(@post) %></p> 
<p><%= link_to "Add a new comment", new_post_comment_url(@post) %></p> 

<h4>Comments:</h4>
<% @post.comments.each do |c| %>
    <li><strong><%= c.user.username %></strong> says "<%= link_to c.content, comment_path(c) %>" </li>
<% end %>