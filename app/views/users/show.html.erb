<h1>Welcome <%= @user.username %><h1>

<% if @user.posts.empty? %>
    <h2>No posts yet. Write a post <%= link_to "here", new_post_path %></h2>

<% else %>

    <h2>Your Posts</h2>
    <ul>
        <% @user.posts.each do |post| %>
            <li><%= link_to post.title, post_path(post) %></li>
        <% end %>
    </ul>

<% end %>

